<h2>Input Data</h2>
<dl class="dl-horizontal">
    <dt>Phone Number</dt>
    <dd>
        <pre>{{ input['phonenumber'] }}</pre>
    </dd>

    <dt>Default Country</dt>
    <dd>
        <pre>{{ input['country'] }}</pre>
    </dd>

    {% if input['language'] %}
        <dt>Language</dt>
        <dd>
            <pre>{{ input['language'] }}</pre>
        </dd>
    {% endif %}

    {% if input['region'] %}
        <dt>Region</dt>
        <dd>
            <pre>{{ input['region'] }}</pre>
        </dd>
    {% endif %}

</dl>